#!/bin/bash
# Spawn a new terminal with zoxide interactive directory picker

# Spawn kitty with an interactive zoxide picker
# After selection, stay in that directory with a new shell
kitty fish -c "
    # Use zoxide's interactive picker to select a directory
    set selected_dir (zoxide query -l | fzf --height=40% --reverse --border --prompt='Select directory: ')

    # If a directory was selected, cd to it and start a new shell
    if test -n \"\$selected_dir\"
        cd \"\$selected_dir\"
        exec fish
    else
        # If cancelled, just start a normal shell
        exec fish
    end
"
